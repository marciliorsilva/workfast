<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc
http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<context:component-scan
		base-package="br.com.ifpe.workfast" />
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/view/" />
		<property name="suffix" value=".jsp" />
	</bean>
	
	<!-- A linha abaixo é necessária para poder carregar nos JSP os arquivos CSS, imagens, JavaScript e etc -->
	<mvc:resources mapping="/resources/**" location="/resources/" />
	
	<mvc:annotation-driven conversion-service="conversionService" />
	
		<bean id="conversionService"
			class="org.springframework.context.support.ConversionServiceFactoryBean">
			<property name="converters">
			<list>
			  <bean class="br.com.ifpe.workfast.converters.TipoAcessoConverter" />
			  <bean class="br.com.ifpe.workfast.converters.UsuarioConverter" />
			  <bean class="br.com.ifpe.workfast.converters.ProfissaoConverter" />
			  <bean class="br.com.ifpe.workfast.converters.EstadoConverter" /> 
			  <bean class="br.com.ifpe.workfast.converters.CidadeConverter" />  
			  <bean class="br.com.ifpe.workfast.converters.CategoriaServicoConverter" />  
			  <bean class="br.com.ifpe.workfast.converters.UsuarioServicoConverter" /> 
			  <bean class="br.com.ifpe.workfast.converters.EnderecoConverter" />  
			  <bean class="br.com.ifpe.workfast.converters.SolicitacaoContratoConverter" /> 					  			   
			</list>
			</property>
		</bean>
	 <mvc:interceptors>
	     <bean class="br.com.ifpe.workfast.util.AutorizadorInterceptor" />
	 </mvc:interceptors>
	 
	 <bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="1000000" />
	</bean>
	
</beans>